<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dgtp.com.dao.AdminOperationDao">

	<select id="findAdminById" parameterType="int" resultType="cn.dgtp.com.pojo.Admin">
		select * from login where id=#{username}
	</select>
	
	<insert id="insertUser" parameterType="cn.dgtp.com.pojo.Admin">
		insert into login(
			id,pwd,r_id,email
		) values(
			#{id},
			#{pwd},
			#{r_id},
			#{email}
		)
	</insert>
	
	<update id="update" parameterType="cn.dgtp.com.pojo.Admin">
		update login set pwd=#{pwd},email=#{email} where id=#{id}
	</update>
</mapper> 